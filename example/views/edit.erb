<h4>编辑留言</h4>
<% if @message %>

<div class="alert alert-<%= @message[:status] %>" role="alert">
  <%= @message[:desc] %>
</div>
<% end %>
<form action="/edit" method="post">
  <input type="hidden" name="id" value="<%= @item.id %>">
  <div class="form-group">
    <label for="authorInput">您的姓名(至少2个字)</label>
    <input type="text" name="author" class="form-control" id="authorInput" value="<%= params[:author] || @item.author %>">
  </div>
  <div class="form-group">
    <label for="messageInput">留言内容(至少10个字)</label>
    <textarea name="message" id="messageInput" cols="30" rows="5" class="form-control" ><%= params[:message] || @item.message %></textarea>
  </div>
  <div class="pull-right">
    <input type="submit" value="提交" class="btn btn-primary">
  </div>
</form>